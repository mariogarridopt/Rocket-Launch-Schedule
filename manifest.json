{
   "name": "Rocket Launch Schedule",
   "description": "List of all upcoming Launches",
   "version": "18.5.13",
   "manifest_version": 2,

   "browser_action": {
      "default_icon": "img/icon_16.png",
      "default_popup": "popup.html"
   },
   "background": {
      "scripts": ["js/background.js"],
      "persistent": false
   },
   "icons": {
      "128": "img/icon_128.png",
      "16": "img/icon_16.png",
      "48": "img/icon_48.png"
   },
   "permissions": [
      "https://launchlibrary.net/*",
      "alarms",
      "notifications"
   ]
}
